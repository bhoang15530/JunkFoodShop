<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <h4>Category Management</h4>
            <h6 class="font-weight-light">Edit this Category.</h6>
            <form id="category-form" class="pt-3" asp-action="CategoryEdit" asp-controller="Admin">
                <input type="hidden" name="CategoryId" value="@ViewBag.CategoryData.Categoryid" />
                <div class="form-group">
                    <input type="text" value="@ViewBag.CategoryData.CategoryName" class="form-control form-control-lg" name="CategoryName" id="CategoryName" placeholder="Category Name">
                    <span class="form-message"></span>
                </div>
                <div class="form-group">
                    <input type="text" value="@ViewBag.CategoryData.CategoryImage" class="form-control form-control-lg" name="CategoryImage" id="CategoryImage" placeholder="Category Image Path">
                    <span class="form-message"></span>
                </div>
                <div class="mt-3 w-100">
                    <button type="submit" class="w-100 btn btn-block btn-primary btn-lg font-weight-medium">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>

