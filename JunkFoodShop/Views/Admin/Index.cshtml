<div class="admin-index-page">
    <h2>Welcome to Admin Dashboard! What would you want to do?</h2>
    <a class="btn btn-primary text-white" href="/Admin/CreateFood">Create A New Food</a>
    <a class="btn btn-primary text-white" href="/Admin/CreateCategory">Create A New Category</a>
</div>

@foreach (var item in ViewBag.totalPrice)
{
    <h1>Tổng tiền đơn hàng nhóm theo tháng và năm </h1>
    <h4>@item.Month @item.TotalPrice</h4>
}
<hr />
@foreach (var item in ViewBag.totalOrders)
{
    <h1>Tổng số lượng đơn hàng nhóm theo tháng và năm </h1>
    <h4>@item.Month @item.TotalOrder</h4>
}

<style>
    .admin-index-page {
        margin-top: 3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4rem;
        flex-grow: 1;
    }
</style>