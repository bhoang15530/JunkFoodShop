<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>See more Details</p>
                    <h1>FOOD BY CATEGORY</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<div class="product-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">@ViewBag.CategoryName</span></h3>
                </div>
            </div>
        </div>
        @if (ViewBag.FoodListByCategory.Count == 0)
        {
            <h2>No items here</h2>
        }
        else
        {
            <div class="row">
                @foreach (var food in ViewBag.FoodListByCategory)
                {
                    <div class="col-lg-4 col-md-6 text-center">
                        <div class="single-product-item">
                            <div class="product-image">
                                <a asp-action="Details" asp-controller="Foods" asp-route-foodId="@food.FoodId"><img src="@food.FoodImage" alt="@food.FoodName" width="300" height="200" style="object-fit: contain"></a>
                            </div>
                            <h3>@food.FoodName</h3>
                            <p class="product-price">@food.FoodPrice.ToString("n0")₫</p>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>