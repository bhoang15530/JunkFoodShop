<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>See more Details</p>
                    <h1>Your Search Results</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<div class="product-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3>
                        Keyword: 
                        <span class="orange-text">
                            @if (ViewBag.Keyword != null)
                            {
                                @ViewBag.Keyword
                            }
                        </span>
                    </h3>
                    <p>Happy Shoppping!</p>
                </div>
            </div>
        </div>
        @if (ViewBag.FoodList == null)
        {
            <h2>No item here.</h2>
        }
        else
        {
            <div class="row">
                @foreach (var food in ViewBag.FoodList)
                {
                    <div class="col-lg-4 col-md-6 text-center">
                        <div class="single-product-item">
                            <div class="product-image">
                                <a asp-action="Details" asp-controller="Foods" asp-route-foodId="@food.FoodId"><img src="@food.FoodImage" alt="@food.FoodName" width="300" height="200" style="object-fit: contain"></a>
                            </div>
                            <h3>@food.FoodName</h3>
                            <p class="product-price">@food.FoodPrice.ToString("n0") ₫</p>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>